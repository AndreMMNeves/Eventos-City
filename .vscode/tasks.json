{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Projeto Java",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d",
        "bin",
        "src/*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "java",
        "fileLocation": ["relative", "${workspaceFolder}/src"],
        "pattern": {
          "regexp": "^(.*\\.java):(\\d+): (.*)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      }
    }
  ]
}
